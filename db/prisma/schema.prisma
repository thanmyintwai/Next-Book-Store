generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Book {
  //id     Int     @id @default(autoincrement())
  id     String  @id @default(cuid())
  title  String
  pages  Int     @default(1)
  isbn   String
  price  Int     @default(0)
  views  Int     @default(0)
  //FK
  orders Order[]

  @@unique([title, isbn])
}

model Profile {
  id         String   @id @default(cuid())
  socialId   String
  customer   Customer @relation(fields: [customerId], references: [id])
  customerId String   @unique
}

model Customer {
  //id               Int     @id @default(autoincrement())
  id               String   @id @default(cuid())
  firstName        String
  lastName         String?
  email            String
  phone            String
  address          String?
  postCode         String?
  city             String?
  country          String?
  //FK
  associatedOrders Order[] //---------
  Profile          Profile?
}

model Order {
  //id        Int      @id @default(autoincrement())
  id        String   @id @default(cuid())
  //FK 1 M //------------
  orderBy   Customer @relation(fields: [orderById], references: [id])
  orderById String
  //FK M M 
  books     Book[]

  orderDate DateTime @default(now())
  status    String   @default("Progress")
  total     Int      @default(0)
}
